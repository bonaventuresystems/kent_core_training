@model List<DemoMVC.Models.Emp>

<html>
    <head>
        <title>Demo</title>
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    
    </head>
    <body class="container">
        <a href="/Home/Create" class="btn btn-success">Add Record</a>
        <hr />
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model)
                    {
                        <tr>
                            <td>@emp.No</td>
                            <td>@emp.Name</td>
                            <td>@emp.Address</td>
                            <td>
                            <a class="btn btn-warning" href="/Home/Edit/@emp.No">Edit</a>
                            <a class="btn btn-danger" href="/Home/Delete/@emp.No">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
    </body>
</html>